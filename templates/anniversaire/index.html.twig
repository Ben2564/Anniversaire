{% extends 'base.html.twig' %}

{% block title %}Anniversaire{% endblock %}

{% block body %}

    <a  class="button" href="{{ path('app_anniversaire_new') }}">Ajouter</a>

    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>DateAnniv</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for anniversaire in anniversaires %}
            <tr>
                <td>{{ anniversaire.nom }}</td>
                <td>{{ anniversaire.dateAnniv ? anniversaire.dateAnniv|date('Y-m-d') : '' }}</td>
                <td class="button-container">
                    <a  class="button2" href="{{ path('app_anniversaire_edit', {'id': anniversaire.id}) }}">edit</a>
                    {{ include('anniversaire/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
