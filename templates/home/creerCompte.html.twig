{% extends 'base.html.twig' %}

{% block title %}Hello!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<form class="form" action="{{ path('valider_creer_compte') }}" method="post">
    <label class="esp" for="username">Nom d'utilisateur :</label>
    <input class="esp" type="text" id="username" name="_username" >

    <label class="esp" for="password">Mot de passe :</label>
    <input class="esp" type="password" id="password" name="_password" >

    <label class="esp" for="passwordRetaper">Retaper le mot de passe :</label>
    <input class="esp" type="passwordRetaper" id="passwordRetaper" name="_passwordRetaper" >

    <button  class="button" type="submit">Se connecter</button>
</form>
{% endblock %}